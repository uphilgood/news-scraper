<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Comments</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
       {{#each data.dbArticle}}
    <tr>
      <td data-id={{this._id}}><a href={{this.link}}><h3>{{this.title}}</h3></a></td>
      
      <td><a data-id={{this._id}} class="btn btn-secondary btn-lg active" id="view-comment" role="button" aria-pressed="true" >Comment</a></td>
      <td><a data-id={{this._id}} class="btn btn-secondary btn-lg active" id="save-article" role="button" aria-pressed="true" >Save Article</a></td>
{{!-- data-toggle="modal" data-target="#commentModal" --}}
    </tr>
     {{/each}}

  </tbody>
</table>

